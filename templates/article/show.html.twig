{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
    <h1>Détails de l'Article</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article.texte }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_article_index') }}">Retour à la liste</a>
    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Éditer</a>
    {{ include('article/_delete_form.html.twig') }}
{% endblock %}